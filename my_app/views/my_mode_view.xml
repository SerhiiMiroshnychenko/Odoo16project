                                <field name="a_html"/>
                            </group>
                            <group>
                                <field name="an_int"/>
                                <field name="a_float"/>
                            </group>
                            <group>
                                <field name="a_binary"/>
                                <field name="an_image"/>
                            </group>
                            <group>
                                <field name="a_date"/>
                                <field name="a_datetime"/>
                            </group>
                            <group>
                                <field name="a_selection"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

